<Window x:Class="ReadLargeFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReadLargeFile"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Read Line:</Label>
            <TextBox x:Name="txtReadLine"></TextBox>
            <Label>Total Line:</Label>
            <TextBox x:Name="txtTotalLine"></TextBox>
            <Button x:Name="btnRead" Click="btnRead_Click">Read</Button>
        </StackPanel>
    </Grid>
</Window>
